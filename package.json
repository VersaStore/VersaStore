        "url": "https://github.com/VersaStore/versastore-core/issues"
    },
    "homepage": "https://github.com/VersaStore/versastore-core#readme",
    "devDependencies": {
        "@types/jest": "^29.5.3",
        "@types/node": "^20.4.5",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "jest": "^29.5.0",
        "json5": "^2.2.3",
        "lerna": "^7.1.4",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "ts-prune": "^0.10.3",
        "ts-unused-exports": "^9.0.5",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.379.1"
    }
